{
  "manifest_version": 2,
  "name": "Super Productivity",
  "description": "Allows communication with jira and idle time tracking for super productivity inside the browser.",
  "version": "0.0.0",
  "background": {
    "scripts": [
      "main.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "frontend-interface.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "SP!"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "http://localhost",
    "<all_urls>",
    "webRequest"
  ]
}